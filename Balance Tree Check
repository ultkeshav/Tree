class Solution {
  public:
    bool isBalanced(Node* root) {
        // Code here
         return checkHeight(root) != -1;
    }

    int checkHeight(Node* node) {
        if (!node) return 0; 

        int left = checkHeight(node->left);
        if (left == -1) return -1; 

        int right = checkHeight(node->right);
        if (right == -1) return -1; 

        if (abs(left - right) > 1) return -1; 

        return 1 + max(left, right); 
    }
};
